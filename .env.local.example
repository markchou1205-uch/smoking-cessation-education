# .env.local.example
# 複製此檔案為 .env.local 並填入實際值

# 應用程式配置
NEXT_PUBLIC_APP_NAME="健行科技大學戒菸教育系統"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SCHOOL_NAME="健行科技大學"

# 資料庫配置 (Vercel Postgres 或其他)
# DATABASE_URL="postgresql://username:password@hostname:port/database"
# POSTGRES_PRISMA_URL="postgresql://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15"
# POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:port/database"

# 管理員認證
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your_secure_password_here"
JWT_SECRET="your_jwt_secret_key_here"

# 檔案上傳配置
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="application/pdf,image/jpeg,image/png"

# 郵件通知配置 (可選)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# NOTIFICATION_EMAIL="admin@school.edu.tw"

# 系統配置
TIMEZONE="Asia/Taipei"
DEFAULT_LOCALE="zh-TW"

# 開發模式配置
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"

# API 端點 (如需要)
# NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# YouTube API (如需要進階影片功能)
# YOUTUBE_API_KEY="your_youtube_api_key"

# 第三方服務 (如需要)
# RECAPTCHA_SITE_KEY="your_recaptcha_site_key"
# RECAPTCHA_SECRET_KEY="your_recaptcha_secret_key"

# PostgreSQL 資料庫 URL (Vercel Postgres)
POSTGRES_URL="postgresql://username:password@host:port/database"

# 或者使用 DATABASE_URL (通用格式)
DATABASE_URL="postgresql://username:password@host:port/database"

# 開發環境
NODE_ENV="development"

# 範例：
# POSTGRES_URL="postgresql://user:pass123@localhost:5432/smoking_cessation"
# DATABASE_URL="postgresql://user:pass123@localhost:5432/smoking_cessation"

# 注意事項：
# 1. 請確保資料庫已經建立
# 2. 使用者需要有建立表格的權限
# 3. 生產環境請使用 HTTPS 連接
# 4. 請勿將真實的資料庫密碼提交到版本控制系統
